#!/bin/bash
# Author Daniel "fauen" BÃ¤ckman
# https://github.com/fauen

wttr()
{
	if [ -z $1 ]; then
		curl wttr.in/?m
	else
		curl wttr.in/${1}?m
	fi
}

stonks()
{
	if [ -z $1 ]; then
		curl https://terminal-stocks.herokuapp.com/market-summary
	else
		curl https://terminal-stocks.herokuapp.com/historical/${1}
	fi
}
